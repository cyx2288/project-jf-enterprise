<script>

    //修改地址模态框
    $('.modify_address_btn').on("click",function(){
        //一个模态框出现的方法
        modelInfo('#modify_address_modal'); //参数：模态框id选择器
    })

    //新增地址模态框
    $('.lookup_btn2').on("click",function(){
        //一个模态框出现的方法
        modelInfo('#add_address_modal'); //参数：模态框id选择器
    })


    //修改地址模态框失败
    $('.modify_address_close').on("click",function(){
        //模态框隐藏的方法
        hideOneModal(this);

        setTimeout(function(){
            //fail模态框出现的方法
            jfModelFrame.failModelShow('企业地址修改','企业地址修改失败','')//参数一是fail模态框的标题，参数二是模态框中间提示文本，参数三是提示信息
        },300)
    })


    //新增地址模态框成功
    $('.add_address_close').on("click",function(){
        //模态框隐藏的方法
        hideOneModal(this);

        setTimeout(function(){
            //success模态框出现的方法
            jfModelFrame.successModelShow('新增企业地址','企业地址新增成功','')//参数一是success模态框的标题，参数二是模态框中间提示文本，参数三是提示信息
        },300)
    })

    //删除地址模态框
    $('.delete_address_btn').on("click",function(){//点击按钮cass值

        var thisEle=$(this)

        //一个模态框出现的方法
        modelInfo('#delete_address_modal'); //参数：模态框id选择器

        $('.delete_address').on("click",function(){//点击删除按钮，模态框隐藏，并且表格行删除

            $(this).parents('.modal').modal('hide');//模态框隐藏

            thisEle.parents('tr').remove()//删除表格

        })
    })



</script>
