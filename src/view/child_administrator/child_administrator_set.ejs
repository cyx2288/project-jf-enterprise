    <!-- 表格-->
    <div class="table-responsive info_table">
        <table class="table table-striped">
            <thead>
            <tr class="tr-zy">
                <th>姓名</th>
                <th>手机号</th>
                <th>状态</th>
                <th>所属权限</th>
                <th>操作</th>

            </tr>
            </thead>
            <tbody>
            <tr>
                <td>小王</td>
                <td>13956997856</td>
                <td>未激活</td>
                <td>员工查询、员工导入、福利分配导入</td>
                <td><span class="modify_address_btn">编辑</span> | <span class="delete_address_btn">权限</span></td>
            </tr>
            <tr>
                <td>小王</td>
                <td>13956997856</td>
                <td>关闭</td>
                <td>VIP卡回收、VIP卡回收查询、企业转账、企业充值明细</td>
